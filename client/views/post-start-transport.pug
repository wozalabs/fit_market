extends index.pug

block content
    h2 Start Transport (Type: 60)

    form(method='POST' action='/post-start-transport')
        div.form-group
            label(for='palletid') Pallet ID:
            input#recipient.form-control(type='text', placeholder='Pallet ID' name='palletid')
        div.form-group
            label(for='passphrase') Passphrase of Carrier:
            input#recipient.form-control(type='text', value='gasp mass rose pause case solid lyrics aerobic fly real seven confirm' name='passphrase')
        button.btn.btn-warning(type='submit') Start Transport

    br
    h3 Pallet IDs
    pre
        table.table.table-striped
            thead
                tr
                    th(scope='col') Address
                    th(scope='col') Balance
                    th(scope='col') Asset

            tbody
                each account in accounts
                    tr
                        td= account.address
                        td= account.balance
                        td= JSON.stringify(account.asset, null, 2)
